<resources xmlns:tools="http://schemas.android.com/tools">
  <!-- Base application theme. -->
  <style name="Theme.SPIN" parent="Theme.MaterialComponents.Light.NoActionBar">
    <!-- Primary brand color. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryVariant">@color/colorPrimary</item>
    <item name="colorOnPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="android:textViewStyle">@style/GlobalTextViewStyle</item>
    <item name="colorOnSecondary">@color/black</item>
    <!-- Status bar color. -->
    <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <!-- Customize your theme here. -->
    <item name="fontFamily">@font/proxima</item>
  </style>

  <style name="Theme.SPIN.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Theme.SPIN.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="Theme.SPIN.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="GlobalTextViewStyle" parent="android:Widget.TextView">
    <item name="android:fontFamily">@font/proxima</item>
  </style>

  <style name="GlobalButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:fontFamily">@font/proxima</item>
  </style>

  <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
    <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
  </style>

  <style name="ThemeOverlay.App.BottomNavigationView" parent="">
    <item name="colorPrimary">@color/white</item>
    <item name="colorOnPrimary">@color/deepCove</item>
  </style>

  <style name="ParentButton" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingStart">@dimen/default_padding_margin</item>
    <item name="android:paddingEnd">@dimen/default_padding_margin</item>
    <item name="android:gravity">center</item>
    <item name="cornerRadius">4dp</item>
  </style>

  <style name="PrimaryButton" parent="ParentButton">
    <item name="android:background">@color/color_button</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="SecondaryButton" parent="ParentButton">
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">@dimen/default_padding_margin_xx</item>
    <item name="android:paddingEnd">@dimen/default_padding_margin_xx</item>
    <item name="android:backgroundTint" tools:targetApi="lollipop">@color/white</item>
    <item name="android:textColor">@color/colorPrimary</item>
    <item name="strokeColor">@color/colorPrimary</item>
    <item name="strokeWidth">2dp</item>
  </style>

  <style name="SecondaryButtonDisable" parent="ParentButton">
    <item name="android:background">@color/white</item>
    <item name="android:textColor">@color/black30</item>
    <item name="strokeColor">@color/black20</item>
    <item name="strokeWidth">2dp</item>
    <item name="backgroundTint">@android:color/transparent</item>
  </style>

  <style name="OptionButton" parent="ParentButton">
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingStart">@dimen/default_padding_margin_xx</item>
    <item name="android:paddingEnd">@dimen/default_padding_margin_xx</item>
    <item name="android:backgroundTint" tools:targetApi="lollipop">@color/gray</item>
    <item name="strokeWidth">2dp</item>
  </style>

  <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColorHint">@color/black20</item>
    <item name="android:textColor">@color/black90</item>
    <item name="boxStrokeColor">@color/cinder</item>
    <item name="boxStrokeWidth">1dp</item>
  </style>

  <style name="TextInputLayoutWithoutTextOutside" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColorHint">@color/black20</item>
    <item name="android:textColor">@color/black90</item>
    <item name="boxStrokeColor">@color/cinder</item>
    <item name="boxStrokeWidth">8dp</item>
  </style>

  <style name="EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/black90</item>
  </style>

  <style name="TextLabel" parent="TextAppearance.AppCompat">
    <!-- Hint color and label color in FALSE state -->
    <item name="android:textColorHint">@color/black20</item>
    <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
    <item name="colorAccent">@color/black</item>
    <item name="colorControlNormal">@color/black</item>
    <item name="colorControlActivated">@color/black</item>
    <item name="colorOnSurface">@color/black</item>
  </style>

  <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <!-- set the rounded drawable as background to your bottom sheet -->
  <style name="BottomSheetStyle" parent="@style/Widget.Design.BottomSheet.Modal">
    <item name="android:background">@drawable/bg_rounded_bottom_sheet_white_half_top</item>
  </style>

  <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
    <item name="android:windowIsFloating">false</item>
    <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
  </style>

  <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
    <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
    <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
  </style>

  <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
  <item name="android:tint">@color/white</item>
  </style>
</resources>