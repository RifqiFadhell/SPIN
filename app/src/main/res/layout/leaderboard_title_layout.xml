<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#0073A2"
  android:clickable="true"
  android:focusable="true"
  android:gravity="center"
  android:orientation="horizontal"
  android:paddingTop="@dimen/default_padding_margin_small"
  android:paddingBottom="@dimen/default_padding_margin_small">

  <TextView
    android:id="@+id/textRankLeaderboard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="Ranks"
    android:textColor="@color/white"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textUsernameLeaderboard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:text="Username"
    android:textColor="@color/white"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/textTokenLeaderboard"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center"
    android:text="SPIN Token"
    android:textColor="@color/white"
    android:textStyle="bold" />
</LinearLayout>
