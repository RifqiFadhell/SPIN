<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/background_rounded_white">

  <androidx.appcompat.widget.AppCompatImageButton
    android:id="@+id/buttonDismiss"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="@dimen/default_padding_margin_xx"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/ic_dismiss" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/listPayment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/default_padding_margin_h"
    android:paddingEnd="@dimen/default_padding_margin_h"
    android:paddingBottom="@dimen/default_padding_margin_xxx"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/buttonDismiss" />

</androidx.constraintlayout.widget.ConstraintLayout>