<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="10dp"
  android:layout_marginTop="10dp"
  android:layout_marginEnd="10dp"
  android:layout_marginBottom="10dp"
  android:background="@drawable/background_item_product">

  <LinearLayout
    android:id="@+id/iconLayout"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_margin="10dp"
    android:background="@drawable/category_active_background"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/ic_diamond" />
  </LinearLayout>

  <TextView
    android:id="@+id/textItemProduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fontFamily="@font/inter_semibold"
    android:gravity="center_vertical"
    android:textColor="#12121B"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@id/iconLayout"
    app:layout_constraintTop_toTopOf="parent"
    tools:text="296 Diamonds" />

  <TextView
    android:id="@+id/textPriceProduct"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:fontFamily="@font/inter_semibold"
    android:gravity="center_vertical"
    android:textColor="#9E9E9E"
    android:textSize="15sp"
    android:textStyle="bold"
    app:layout_constraintStart_toEndOf="@id/iconLayout"
    app:layout_constraintTop_toBottomOf="@+id/textItemProduct"
    tools:text="Rp 46.000" />

</androidx.constraintlayout.widget.ConstraintLayout>